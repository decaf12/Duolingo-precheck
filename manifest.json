{

    "manifest_version": 2,
    "name": "Duolingo Precheck",
    "version": "1.0",
  
    "description": "Pre-submission checks for correctness.",
  
    "icons": {
      "48": "icons/border-48.png"
    },

    "web_accessible_resources": ["XhrIntercept.js"],

    "content_scripts": [
      {
        "matches": [
            "<all_urls>"
          ],
        "js": ["precheck.js"]
      }
    ],
     	
    "background": {
      "scripts": ["background.js"]
    },

    "permissions": [
      "<all_urls>",
      "tabs",
      "history",
      "devtools",
      "sessions",
      "webRequest",
      "webRequestBlocking"
    ],

    "devtools_page": "devtools/devtools-page.html"
  
  }
  