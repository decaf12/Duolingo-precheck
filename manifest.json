{

    "manifest_version": 2,
    "name": "Duolingo Precheck",
    "version": "1.0",
  
    "description": "Pre-submission checks for correctness.",
  
    "icons": {
      "48": "icons/border-48.png"
    },

    "web_accessible_resources": ["XhrIntercept.js"],

    "content_scripts": [
      {
        "matches": [
          "https://www.duolingo.com/skill/*/practice"
          ],
        "js": ["content.js"]
      }
    ],

    "background": {
      "page": "background.html"
    },

    "permissions": [
      "https://www.duolingo.com/*/sessions",
      "https://excess.duolingo.com/challenge_response/batch",
      "https://www.duolingo.com/skill/*/practice",
      "webNavigation",
      "webRequest",
      "webRequestBlocking"
    ],

    "devtools_page": "devtools/devtools-page.html"
  
  }
  